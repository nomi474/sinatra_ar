<h1>People</h1>
	<table border = 1>
		<tr>
			<th>Name</th>
			<th>Date of Birth</th>
			<th>NameBirthdateEdit</th>
			<th>Delete</th>
		</tr>
		   <% 
			@people.each do |person|
			   birthdate = person.birthdate.to_s
			   noUTC = birthdate[0, birthdate.length - 13] 
			%>
		<tr>
			<td width = 200>
			<a href="/people/<%=person.id%>">
			<%= "#{person.first_name} #{person.last_name}"%>
			</a>
			</td>
			<td><%=noUTC%></td>
			<td>
				<a href = "/people/<%=person.id%>/edit">
				<!--<a href = "<%="/people/#{person.id}/edit" %>">-->
					Edit
				</a>
			</td>
			<td>
				<form action ="/people/<%=person.id%>" method="post">
					<input type="hidden" name="_method" value="delete" />
					<input type="submit" value="Delete" />
				</form>
			</td>
		</tr>
		<% end %>
	</table>   
